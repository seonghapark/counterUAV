<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/button_send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Send" />

    <EditText
        android:id="@+id/text_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_send_message"
        android:layout_alignBottom="@+id/button_send_message"
        android:layout_toLeftOf="@+id/button_send_message"
        android:layout_toStartOf="@+id/button_send_message"
        android:ems="10"
        android:hint="Please enter a message" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/text_console"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_alignLeft="@+id/text_message"
        android:layout_alignRight="@+id/button_send_message"
        android:layout_below="@+id/button_send_message"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>